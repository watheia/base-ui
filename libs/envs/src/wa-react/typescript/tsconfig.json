{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["src/envs/wa-react/typescript/types"]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
    "**/*.mdx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "coverage", ".cache"]
}
